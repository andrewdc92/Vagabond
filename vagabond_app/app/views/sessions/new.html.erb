  <div class="card" id="logincard">
<h3 class="card-title">Log In</h3>

<%= form_for @user, url: "/sessions", method: "post" do |f| %>
  <div>
    <%= f.text_field :email, :class => "login", placeholder: "Email" %>
  </div>
  <br>
  <div>
    <%= f.password_field :password,:class => "password", placeholder: "Password" %>
  </div>
  <br>
  <%= f.submit "Sign In", :class => 'btn-primary' %>
<% end %>
</div>
